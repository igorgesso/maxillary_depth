<p id="notice"><%= notice %></p>

<h1>Exames</h1>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>
<p>
  <strong>Birthdate:</strong>
  <%= @patient.birthdate %>
</p>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Point Po</th>
      <th>Point Or</th>
      <th>Point N</th>
      <th>Point A</th>
      <th>Angle</th>
      <th></th>
    </tr>
  </thead>
  <tbody data-exams='exams' data-exams-patient-id='<%= @patient.id %>'>
  </tbody>
</table>

<%= link_to 'Add Exam', new_patient_exam_path(@patient) , class: "btn btn-primary float-right"  %>  <!-- "data-toggle": "modal", "data-target": "#myModal"-->
<%= link_to 'Edit', edit_patient_path(@patient), class: "btn btn-secondary float-right" %>
<%= link_to 'Back', patients_path, class: "btn btn-secondary"  %>


<div class="modal" id="myModal" tabindex="-1" role="dialog" data-exams='modal'>
  <div class="modal-dialog" role="document">
    <div class="modal-content" data-exams='modal-content'>

    </div>
  </div>
</div>




