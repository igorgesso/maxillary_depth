                    <div class="form-group">
                      <%= a_form.label :y %>
                      <%= a_form.text_field :y, class: "form-control" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <%= form.submit 'Save', class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
